<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://www.springframework.org/schema/beans"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <package>org.acedrin.nirdecaaccounting.domain</package>

    <entity class="org.acedrin.nirdecaaccounting.domain.Operation">
        <table name="operation"/>

        <attributes>
            <id name="id">
                <column name="id"/>
                <generated-value strategy="IDENTITY"/>
            </id>

            <basic name="userId">
                <column name="user_id"/>
            </basic>

            <basic name="categoryId">
                <column name="category_id"/>
            </basic>

            <basic name="tagId">
                <column name="tag_id"/>
            </basic>

            <basic name="date">
                <column name="date"/>
            </basic>

            <basic name="amount">
                <column name="amount"/>
            </basic>

            <basic name="description">
                <column name="description"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>